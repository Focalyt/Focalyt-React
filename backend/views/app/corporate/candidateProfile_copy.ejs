                  let credit = res.data.credit
                  if (!credit) { credit = 0 }
                  $('#userCredit').text(credit)
                  window.location.reload()
                })
              }).catch(
                (error) => {
                  if (error.response.status == 400) {
                    $('#addCoins').modal()
                  }
                })
            }
            else {
