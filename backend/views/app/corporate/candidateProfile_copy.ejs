                      if(cert.certificateName && cert.orgName) { %>
                   <li class="mb-2">
                     <i class="feather icon-award text-warning mr-2"></i>
                     <span class="font-weight-bold">
                       <%= cert.certificateName %>
                     </span> - <%= cert.orgName %> (<%= cert.month || '' %> <%= cert.year || '' %>)
                   </li>
                 <% } }) %>
                  else { %>
                    <p>No certifications listed.</p>
