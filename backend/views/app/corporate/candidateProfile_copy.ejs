                                <a onclick="downloadFocalytresume()" class="dwnload btn">DOWNLOAD&nbsp;<i
                                    class="feather icon-arrow-down text-white font-weight-bold"></i></a>
                              </div>
                            </div>
                          </div>



                          <% if (candidate?.personalInfo && Array.isArray(candidate.personalInfo.resume) &&
